
@{
    ViewData["Title"] = "SignIn";
}
@model SignInViewModel
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

<h1>SignIn</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <h2>KULLANICI GİRİŞ FORM</h2>
        <div asp-validation-summary=ModelOnly class="alert alert-danger" role="alert">
        </div>
        <form asp-controller="Home" asp-action="SignIn" asp-route-returnUrl="@Context.Request.Query["returnURL"]" method="post">
            <div class="row mb-3">
                <label for="Email" class="col-md-4 col-form-label" asp-for="Email"></label>
                <div class="col-md-8">
                    <input asp-for="Email" class="form-control">
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div class="row mb-3">
                <label for="Password" class="col-md-4 col-form-label" asp-for="Password"></label>
                <div class="col-md-8">
                    <input asp-for="Password" class="form-control">
                    <span class="text-danger" asp-validation-for="Password"></span>
                </div>
            </div>
           
            
            <div class="row">
                <div class="col md-6">
                    <div class="mb-3 offset-md-4 form-check">
                        <input class="form-check-input" asp-for="RememberMe">
                        <label class="form-check-label" asp-for="RememberMe" for="exampleCheck1"> </label>
                    </div>
                </div>
                
                <div class="col md-6">

                        <a class="btn btn-outline-secondary btn-sm float-end" asp-controller="Home" asp-action="ResetPassword">Şifremi unuttum</a>

                </div>
            </div>
           
            <button type="submit" class="btn btn-primary">Gir dayi</button>
            
        </form>
    
    </div>

</div>
